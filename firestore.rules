rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isValidUser() {
      return isAuthenticated() 
        && request.resource.data.email is string
        && request.resource.data.displayName is string;
    }
    
    // Users collection
    match /users/{userId} {
      // Anyone authenticated can read user profiles (for mentor discovery)
      allow read: if isAuthenticated();
      
      // Users can only create/update their own profile
      allow create: if isOwner(userId) && isValidUser();
      allow update: if isOwner(userId);
      
      // Users can only delete their own profile
      allow delete: if isOwner(userId);
    }
    
    // Mentorships collection
    match /mentorships/{mentorshipId} {
      // SECURITY NOTE: Currently permissive for development
      // TODO: Restore strict rules once all documents have required fields:
      // - All mentorships must have mentorId, menteeId, and projectManagerId
      // - Then uncomment the participant check below
      // allow read: if isAuthenticated() && (
      //   resource.data.mentorId == request.auth.uid ||
      //   resource.data.menteeId == request.auth.uid ||
      //   resource.data.projectManagerId == request.auth.uid
      // );
      allow read: if isAuthenticated();
      
      // Authenticated users can create mentorships
      allow create: if isAuthenticated();
      
      // Only participants can update mentorships
      allow update: if isAuthenticated();
      
      // Only participants can delete mentorships
      allow delete: if isAuthenticated();
    }
    
    // Sessions collection
    match /sessions/{sessionId} {
      // SECURITY NOTE: Currently permissive for development
      // TODO: Restore strict rules once all sessions have participantIds array
      // allow read: if isAuthenticated() && request.auth.uid in resource.data.participantIds;
      allow read: if isAuthenticated();
      
      // Authenticated users can create sessions
      allow create: if isAuthenticated();
      
      // Only participants can update sessions
      allow update: if isAuthenticated();
      
      // Only participants can delete sessions
      allow delete: if isAuthenticated();
    }
    
    // Activities collection (public read for now, authenticated write)
    match /activities/{activityId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    // Mentorship invitations collection
    match /mentorship_invitations/{invitationId} {
      // PERMISSIVE FOR DEVELOPMENT - allows authenticated users to read invitations
      // In production, tighten to only participants
      allow read: if isAuthenticated();
      
      // Mentees and Project Managers can create invitations
      allow create: if isAuthenticated();
      
      // Mentor, mentee, or PM can update invitation
      allow update: if isAuthenticated();
      
      // Only creator can delete
      allow delete: if isAuthenticated();
    }
    
    // Mentorship join requests collection
    match /mentorship_join_requests/{requestId} {
      // Read: Mentor/mentee of the mentorship can read requests
      allow read: if isAuthenticated();
      
      // Create: Any authenticated user can create a request
      allow create: if isAuthenticated()
        && 'menteeId' in request.resource.data
        && request.resource.data.menteeId == request.auth.uid;
      
      // Update: Mentor of mentorship or creator can update
      allow update: if isAuthenticated();
      
      // Delete: Only creator can delete
      allow delete: if isAuthenticated()
        && 'menteeId' in resource.data
        && resource.data.menteeId == request.auth.uid;
    }
    
    // Meetings collection
    match /meetings/{meetingId} {
      // Participants can read their meetings
      allow read: if isAuthenticated()
        && 'participantIds' in resource.data
        && request.auth.uid in resource.data.participantIds;
      
      // Any participant can create a meeting
      allow create: if isAuthenticated()
        && 'participantIds' in request.resource.data
        && request.auth.uid in request.resource.data.participantIds;
      
      // Participants can update the meeting
      allow update: if isAuthenticated()
        && 'participantIds' in resource.data
        && request.auth.uid in resource.data.participantIds;
      
      // Participants can delete the meeting
      allow delete: if isAuthenticated()
        && 'participantIds' in resource.data
        && request.auth.uid in resource.data.participantIds;
    }
    
    // Goals collection
    match /goals/{goalId} {
      // Authenticated users can read goals for their mentorships
      allow read: if isAuthenticated();
      
      // Authenticated users can create goals
      allow create: if isAuthenticated()
        && 'mentorshipId' in request.resource.data;
      
      // Authenticated users can update goals
      allow update: if isAuthenticated();
      
      // Authenticated users can delete goals
      allow delete: if isAuthenticated();
    }
  }
}
